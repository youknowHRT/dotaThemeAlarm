<view class="binding">
  <view class="title" wx:if="{{isBinding}}">绑定PC账号</view>
  <view class="title" wx:else>注册PC账号</view>
  <view class='input-wrap'>
    <input bindinput='watchAccount' placeholder='账号' value='{{account}}'></input>
    <input bindinput='watchPassword' placeholder='密码' value='{{password}}'></input>
  </view>
  <g-button text="绑定" size="mini" type='change' wx:if="{{isBinding}}"></g-button>
  <g-button text="登录" size="mini" type='change' wx:else></g-button>
  <view class='tips' bindtap='goToSignUp' wx:if="{{isBinding}}">还没有PC账号？快点击注册吧！</view>
  <view class='tips' bindtap='goToBingding' wx:else>绑定PC账号，立即同步数据</view>
  <!-- <image src='../../images/tideHunter.jpg'></image> -->
</view>